{
  "extends": "./tsconfig.base.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src", // To avoid inadvertently changing the directory structure under dist/.
    // Compatible for Node.js v16 (ref: https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping)
    "target": "ES2021",
    "lib": ["ES2021"],
    "declaration": true
  }
}
