{
  "extends": "../../tsconfig.json",
  "include": ["**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    // Compatible for Node.js v16 (ref: https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping)
    "target": "ES2021",
    "lib": ["ES2021"],
    "jsx": "react-jsx",
    "plugins": [{ "name": "typescript-happy-css-modules-plugin" }]
  }
}
